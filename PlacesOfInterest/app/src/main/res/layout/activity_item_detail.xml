<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:backgroundTint="@color/colorPrimary"
    tools:context=".ReadActivity"
    tools:ignore="MergeRootFrame"

    >


    <TextView
        android:id="@+id/breve_desc2"
        android:layout_width="107dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="542dp"
        android:ems="10"
        android:text="Descrizione"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="20sp"

        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/Horizontal"
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:background="@color/colorPrimary"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/take">


        <LinearLayout
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>


    </ScrollView>

    <TextView
        android:id="@+id/nome"
        android:layout_width="107dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="480dp"
        android:ems="10"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:text="Nome"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/nome"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/breve_desc"
        android:layout_width="107dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="598dp"
        android:ems="10"
        android:text="Didascalia"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="20sp"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/b_desc"
        android:layout_width="219dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/breve_desc"
        android:ems="10"
        android:hint="Preview"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="641dp"
        android:layout_marginEnd="27dp">

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="183dp"
            android:layout_marginBottom="15dp"
            android:text="Didascalia"
            android:textSize="20sp" />
    </ScrollView>


    <ImageButton
        android:id="@+id/gps"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="389dp"
        android:background="@drawable/ic_location"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gps"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/design_default_color_primary_dark"
        android:textStyle="bold"
        android:hint="Location"
        android:text="Location"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dida"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/Horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="203dp"
        android:text="dida"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>


</RelativeLayout>
